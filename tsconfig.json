{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
, "lib/mongoose.js", "models/Announcement.js", "models/OrgAnnouncement.js", "app/components/HRDownloadLogs", "app/api/user/theme/route.ts", "models/CalendarEvent.js", "app/api/team-members/route.ts", "app/api/sprints/route.js", "app/api/sprints/[id]/route.js", "app/api/projects/route.ts", "app/api/projects/[id]/route.js", "app/components/universal/WorkflowComponents", "app/utils/sendTicketNotification.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
